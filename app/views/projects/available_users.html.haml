%h2.py-3
  Available Users

= form_tag project_add_users_path do
  %table.table.table-bordered.table-responsive
    %thead
      %tr
        %th{:scope => "col"} Select
        %th{:scope => "col"} First Name
        %th{:scope => "col"} Last Name
    %tbody
      - @users.each_with_index do |user, i|
        %tr
          %td.align-middle
            %input{:type => "checkbox", :value => "#{user.id}", :name => "user_ids[]"}/
          %td.align-middle
            = user.first_name
          %td.align-middle
            = user.last_name

  %input.btn.btn-lg.btn-primary.float-right{:href => "#", :role => "button", :type => "submit", :value => "Add selected users"}
