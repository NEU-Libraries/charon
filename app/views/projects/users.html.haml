%h2.py-3
  = "Users for #{@project.title}"

%table.table.table-bordered.table-responsive
  %thead
    %tr
      %th{:scope => "col"} ID
      %th{:scope => "col"}
        = column_sort "last_name", "Name"
      %th{:scope => "col"} Last Action
  %tbody
    - @users.each_with_index do |user, i|
      %tr
        %td.align-middle
          = user.id
        %td.align-middle
          = link_to "#{user.name}", user
        %td.align-middle
          = render partial: "shared/tasks/display", locals: {action: user.last_action(@project)}
