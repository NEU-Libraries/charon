%h4.py-3
  Users

= form_tag admin_delete_users_path do
  %table.table.table-bordered
    %thead
      %tr
        %th{:scope => "col"} Select
        %th{:scope => "col"}
          = column_sort "last_name", "Name", "users"
        %th{:scope => "col"}
          = column_sort "capacity", "Capacity", "users"
        %th{:scope => "col"}
          = column_sort "created_at", "Created", "users"
        %th{:scope => "col"}
          = column_sort "last_sign_in_at", "Last Sign In", "users"
    %tbody
      - @users.each_with_index do |user, i|
        %tr
          %td.align-middle
            %input{:type => "checkbox", :value => "#{user.id}", :name => "user_ids[]"}/
          %td.align-middle
            = link_to "#{user.name}", user
          %td.align-middle
            = user.capacity
          %td.align-middle
            = user.created_at
          %td.align-middle
            = user.last_sign_in_at

  %input.btn.btn-lg.btn-danger.float-right{:href => "#", :role => "button", :type => "submit", :value => "Delete"}

%div.clearfix
