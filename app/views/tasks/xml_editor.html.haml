#editor{ style: 'position:relative;min-height:320px;' }
  = @work.mods_xml

#mods
  = @mods_html.html_safe

:javascript
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/eclipse");
  editor.getSession().setMode("ace/mode/xml");
  editor.setOptions({
    maxLines: Infinity,
    minLines: 20,
    useSoftTabs: true,
    showInvisibles: true,
  });
