%h2.py-3
  Catalog
  = @work.title

.container
  .row
    .col
      #editor{ style: 'position:relative;min-height:320px;' }<
        = @work.mods_xml
    .col
      #mods
        = @mods_html.html_safe

.py-3.text-right
  %a.btn.btn-primary{:href => "#", :role => "button"} Preview
  %a.btn.btn-success{:href => update_work_path(@work), :role => "button"} Save


:javascript
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/eclipse");
  editor.getSession().setMode("ace/mode/xml");
  editor.setOptions({
    maxLines: Infinity,
    minLines: 20,
    useSoftTabs: true,
    showInvisibles: true,
  });
