%h2.py-3
  Assign a task for
  = @work.title

= form_tag assign_task_path(@work) do
  %table.table.table-bordered.table-responsive
    %thead
      %tr
        %th{:scope => "col"} Type
        %th{:scope => "col"} User
        %th{:scope => "col"} Action
    %tbody
      - JSON.parse(@work.workflow.task_list).each do |task|
        %tr
          %td.align-middle
            = task
          %td.align-middle
            = select("task", "user_id", @users, { include_blank: true })
          %td.align-middle
            %input.btn.btn-primary{:href => "#", :role => "button", :type => "submit", :value => "Assign"}
