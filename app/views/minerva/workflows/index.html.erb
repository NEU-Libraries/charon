<p id="notice"><%= notice %></p>

<h1>Workflows</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Project</th>
      <th>Task list</th>
      <th>Title</th>
      <th>Ordered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflows.each do |workflow| %>
      <tr>
        <td><%= workflow.creator_id %></td>
        <td><%= workflow.project_id %></td>
        <td><%= workflow.task_list %></td>
        <td><%= workflow.title %></td>
        <td><%= workflow.ordered %></td>
        <td><%= link_to 'Show', workflow %></td>
        <td><%= link_to 'Edit', edit_workflow_path(workflow) %></td>
        <td><%= link_to 'Destroy', workflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow', new_workflow_path %>
