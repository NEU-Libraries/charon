= form_tag create_users_path, :multipart => true do
  .form-group
    .custom-file
      = file_field_tag :csv, multiple: false, class: "custom-file-input"
      %label.custom-file-label{:for => "csv"} Choose file
  .form-group
    = submit_tag "Upload", class: 'btn btn-primary'

:javascript
  $('#csv').on('change',function(){
      //get the file name
      var fileName = $(this).val().replace("C:\\fakepath\\", "");
      //replace the "Choose a file" label
      $(this).next('.custom-file-label').html(fileName);
  })
