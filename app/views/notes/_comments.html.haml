%tr
  %td{:colspan => "3"}
    %h6 Comments
    = form_tag comments_path do
      = hidden_field_tag 'note_id', note.noid
      .input-group.mb-3
        %input.form-control{:name => "comment", "aria-describedby" => "basic-addon3", "aria-label" => "Comment Text", :placeholder => "Comment Text", :type => "text"}/
        .input-group-append
          %button.btn.btn-outline-primary{:href => "#", :role => "button", :type => "submit", :remote => "true"} Add Comment
